class Solution {
public:
    int countHillValley(vector<int>& nums) {
        int ans=0;
        for(int i=1;i<nums.size()-1;i++)
        {
            if(nums[i]==nums[i-1]) continue;
            for(int j=i+1;j<nums.size();j++)
            {
                if(nums[j]==nums[i])
                {
                    continue;
                }
                if((nums[i]>nums[i-1])!=(nums[i]>nums[j]))
                {
                    break;
                }
                if((nums[i]>nums[i-1])==(nums[i]>nums[j]))
                {
                    ans++;
                    break;
                }
                
            }//for j
        }//for i
        return ans;
        
    }
};
